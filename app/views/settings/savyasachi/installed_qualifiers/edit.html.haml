- content_for :page_title do
  = t('qualifiers.installed.edit')

= simple_form_for @installed_qualifier, url: settings_installed_qualifier_path do |f|
  = render 'shared/error_messages', object: @installed_qualifier
  = render 'form', f: f

  .actions
    = f.button :button, t('generic.save_changes'), type: :submit

%hr/

= link_to t('qualifiers.back'), settings_installed_qualifier_path(@installed_qualifier), class: 'button button-alternative-2 webapp-btn'
