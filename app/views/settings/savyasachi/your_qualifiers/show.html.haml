- content_for :page_title do
  = @qualifier.name

.table-wrapper
  %table.table
    %tbody
      %tr
        %th= t('qualifiers.name')
        %td= @qualifier.name
      %tr
        %th= t('qualifiers.category')
        %td= @qualifier.category.name
      %tr{ rowspan: 2}
        %th= t('qualifiers.description')
        %td.break-word
          %pre= @qualifier.description
      %tr
        %th= t('qualifiers.endpoint')
        %td.break-word= @qualifier.endpoint
      %tr
        %th= t('qualifiers.yours.headers')
        %td
          %pre= @qualifier.headers
      %tr
        %th= t('qualifiers.version')
        %td= @qualifier.version
      %tr
        %th= t('qualifiers.price')
        - if (@qualifier.price.nil? || @qualifier.price == 0)
          %td= t('qualifiers.all.free')
        - else
          %td= @qualifier.price

%hr/

= link_to t('qualifiers.yours.update'), edit_settings_your_qualifier_path, class: 'button'

%hr/

= link_to t('qualifiers.back'), settings_your_qualifiers_path, class: 'button button-alternative-2 webapp-btn'
